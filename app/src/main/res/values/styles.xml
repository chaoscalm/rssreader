<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeLightNoActionBar" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primarydark</item>
        <item name="android:statusBarColor">@color/primarydark</item>
    </style>

    <style name="ThemeNoActionBar" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primarydark</item>
        <item name="android:statusBarColor">@color/primarydark</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:popupBackground">?attr/colorSurface</item>
    </style>

	<style name="ThemeLightHiContrast" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
	    <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primarydark</item>
        <item name="android:statusBarColor">@color/primarydark</item>
	</style>

    <style name="ThemeHiContrast" parent="@style/Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primarydark</item>
        <item name="android:statusBarColor">@color/primarydark</item>

        <item name="materialButtonStyle">@style/ButtonTextAccentColor</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Solid</item>
    </style>

    <style name="ButtonTextAccentColor" parent="@style/Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/OverlayAccentColor</item>
    </style>
    <style name="OverlayAccentColor">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AlertDialogTheme" parent="@style/Theme.MaterialComponents.Dialog.Alert"/>

    <style name="MyDialogTheme" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:colorBackground">@color/gray75</item>
        <item name="materialButtonStyle">@style/ButtonTextAccentColor</item>
    </style>
</resources>
